# ===================================
# Database Configuration
# ===================================

# OPCIÓN A: PostgreSQL Local
# Usa estas variables para PostgreSQL local
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=control_gastos
DATABASE_USER=postgres
DATABASE_PASSWORD=tu_contraseña
DATABASE_SSL=false

# OPCIÓN B: Neon.tech (PostgreSQL Serverless)
# Usa DATABASE_URL para Neon.tech (comenta las variables de arriba si usas esta opción)
# DATABASE_URL=postgresql://username:password@ep-cool-darkness-123456.us-east-2.aws.neon.tech/neondb?sslmode=require

# Nota: Si DATABASE_URL está definida, las demás variables de DB se ignoran

# ===================================
# Environment Configuration
# ===================================
NODE_ENV=development
APP_URL=http://localhost:5173
PORT=5173

# ===================================
# JWT Secret for authentication
# ===================================
# IMPORTANTE: Cambia esto a un valor aleatorio y seguro en producción
# Puedes generar uno con: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=tu_secreto_super_seguro_aqui_cambiar_en_produccion

# ===================================
# Cookie Configuration
# ===================================
COOKIE_NAME=auth_token
COOKIE_MAX_AGE=14400000  # 4 horas en milisegundos (14400000 ms = 4 horas)
COOKIE_HTTP_ONLY=true
COOKIE_SECURE=false  # Cambiar a true en producción con HTTPS
COOKIE_SAME_SITE=lax
COOKIE_PATH=/
COOKIE_DOMAIN=localhost  # Cambiar a tu dominio en producción

# ===================================
# Email Configuration (recuperación de contraseña)
# ===================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=tu_email@gmail.com
EMAIL_PASS=tu_contraseña_app
EMAIL_FROM=noreply@controlgastos.com
